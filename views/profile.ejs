<body>
  <div class="site-page">

  
  <header>
    <nav class="navbar navbar-expand-lg bg-body-tertiary">
        <div class="container-fluid">
          <a class="navbar-brand" href="/">Home</a>
          <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          

         
          <div class="d-flex"  id="navbarNav">
            <ul class="navbar-nav" >
              <li class="nav-item">
                <a class="nav-link active" aria-current="page" href="#">CLICK FOR TEST</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="#">VIEW RESULT</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="/profile">VIEW PROFILE</a>
              </li>
              <li class="nav-item">
                <a class="nav-link active" href="#">LOGOUT</a>
              </li>
            </ul>
          </div>
        </div>
      </nav>
  </header> 

  
  <div class="body">
    <section class="section1">
      <div class="container">
        <div class="student-profile py-4">
          <div class="container">
            <div class="row">
              <div class="col-lg-4">
                <div class="card shadow-sm">
                  <div class="card-header bg-transparent text-center">
                    <img class="profile_img" src="/user.jpg" alt="student dp">
                  

                    <h3>Naresh khemnani</h3>
                  </div>
                  <div class="card-body">
                    <p class="mb-0" id="<%=data[0]['id']%>"> <strong class="pr-1">Student ID:</strong><%=data[0]['id']%></p>
                    <p class="mb-0"><strong class="pr-1">Name:</strong><%=data[0]['first_name']%></p>
                    <p class="mb-0"><strong class="pr-1">Email:</strong><%=data[0]['email']%></p>
                  </div>
                </div>
              </div>
              <div class="col-lg-8">
                <div class="card shadow-sm">
                  <div class="card-header bg-transparent border-0">
                    <h3 class="mb-0"><i class="far fa-clone pr-1"></i>General Information</h3>
                  </div>
                  <div class="card-body pt-0">
                    <table class="table table-bordered">
                      <tr>
                        <th width="30%">City</th>
                        <td width="2%">:</td>
                        <td><input type="text" name="city" class="general" id="general1" value="<%=data[0]['city']%>" disabled></td>
                      </tr>
                      <tr>
                        <th width="30%">State	</th>
                        <td width="2%">:</td>
                        <td> <input type="text" name="city" class="general" id="general2" value="<%=data[0]['state']%>" disabled></td>
                      </tr>
                      <tr>
                        <th width="30%">Gender</th>
                        <td width="2%">:</td>
                        <td> <input type="text" name="city" class="general" id="general3" value="<%=data[0]['gender']%>" disabled></td>
                      </tr>
                    
                      <tr>
                        <th width="30%">Date of Birth</th>
                        <td width="2%">:</td>
                        <td> <input type="text" name="city" class="general" id="general4" value="<%=data[0]['dob']%>" disabled></td>
                      </tr>
                      
              
                     
                    </table>
                    <div class="edit">
                    
                      <div>  <input class="btn btn-primary" type="submit" value="Edit" onclick="edit()" id="demo"></div>
                      <div class="save"> <input class="btn btn-primary" type="submit" value="Save Changes" onclick="savechange()"></div>
                        
                    </div>
                    <input type="hidden"  id="id" value="<%=data[0]['id']%>" >
               
                  </div>
                </div>

                  
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>
