<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Exam_start</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/Css/style.css" type="text/css">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
</head>

<body>
    <div class="main_exam">
        <header>
            <nav class="navbar navbar-expand-lg bg-warning">
                <div class="container-fluid">
                    <!-- <img src="/exam_logo.jpg" class="img-circle" alt="logo"> -->
                    <h2 class="h2">Online Exam System</h2>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                        aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="d-flex justify-content-between " id="navbarNav">
                        <ul class="navbar-nav d-flex justify-content-between ">

                            <li class="nav-item">
                                <!-- <h2 class="h2"><%= %></h2> -->
                                <h2 class="h2">User name</h2>

                            </li>

                        </ul>

                    </div>


                </div>
            </nav>


        </header>

        <section class="exam_body">
            <div class="container_fluid">

                <div class="row">
                    <div class="col-6 col-md-8 border">
                        <div class="container"></div>

                    </div>
                    <div class="col-12 col-md-4 border">
                        <div class="container mt-4 mb-4 border p-3 ">
                            <h2 class="h2">Questions</h2>
                            <div class="grid border d-flex flex-wrap gap-50 ">
                                <% if(exam_que.length){ %>
                                    <%for(let i=0;i<exam_que.length;i++){ %>
                                        <a href="#"
                                            class="t-30px padd-4 d-flex justify-content-center align-items-center border m-2 btn bg-aqva"
                                            id="<%=exam_que[i].question_id %>">
                                            <%=exam_que[i].question_id %>
                                        </a>
                                        <%}}%>

                                            <div class="container d-flex flex-column border mt-5 p-3 m-2">
                                                <div class="p-2 d-flex gap-20 ">
                                                    <div class="bg-success padd-2  btn"></div>
                                                    <p class="t-30px">Saved</p>
                                                </div>
                                                <div class="p-2 d-flex gap-20 ">
                                                    <div class="bg-aqva padd-2 btn"></div>
                                                    <p class="t-30px">Remaining</p>
                                                </div>
                                                <div class="p-2 d-flex gap-20 ">
                                                    <div class="bg-primary padd-2 btn"></div>
                                                    <p class="t-30px">Current Question</p>
                                                </div>
                                            </div>
                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </section>
    </div>
    <script>
        const current_selected = 0;
        const inputs = document.querySelectorAll('.padd-4');
        // console.log(inputs[0]);
        let flag = 1;
        for (let i = 0; i < inputs.length; i++) {
            inputs[i].addEventListener('click', async (ele) => {

                const id = ele.target.id;
                console.log(i, id);
                if (flag) {
                    document.getElementById(id).style.backgroundColor = '#0d6efd';
                    flag = 0;
                }
                else {

                    document.getElementById(id).style.backgroundColor = 'rgb(232, 237, 241)';
                }

            })
        }

        // inputs.forEach(element => {
        //     // console.log(element.id);
        //     const id = document.getAnimations(element.id);
        //     element.addEventListener('click', (ele) => {
        //         console.log(ele.target.id, element.id);
        //     })
        // });
    </script>
</body>

</html>