<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <title>Document</title>
    <style>
        th {
            background-color: goldenrod;
        }

        tr:nth-child(even) {
            background-color: lightgoldenrodyellow;
        }

        tr:nth-child(odd) {
            background-color: lightpink;
        }

        * {
            margin: 0px;
            padding: 0px;
        }

        .btn-login {
            padding: 10px 15px;
            cursor: pointer;
            background-color: black;
            color: white;
        }

        .overlay {
            width: 100%;
            position: fixed;
            top: 0%;
            background: rgba(0, 0, 0, 0);
            height: 100vh;
            z-index: -1;
            opacity: 0;
            transition: 1s;
        }

        .loginform {
            width: 300px;
            padding: 30px 20px;
            background-color: white;
            position: absolute;
            transition: 2s;
            left: 50%;
            z-index: 9;
            top: -50%;
            box-shadow: 0px 0px 10px 3px #CCC;
            transform: translate(-50%, -50%);
        }

        .loginform input {
            width: 100%;
            margin-bottom: 15px;
            height: 35px;
        }

        /* .loginform button {
            background-color: black;
        } */

        .loginform span {
            position: absolute;
            right: 0px;
            width: 30px;
            color: white;
            line-height: 30px;
            cursor: pointer;
            height: 30px;
            top: 0px;
            background-color: green;
            text-align: center;
        }

        .showoverlay {
            opacity: 1;
            z-index: 1;
        }

        .showloginform {
            top: 50%;
        }

        #error {
            color: red;
        }
    </style>
</head>

<body>

    <body>
        <% if(examlist) {%>
            <table border="1px solid black">
                <tr>
                    <th>Exam ID</th>
                    <th>Exam Name</th>
                    <th>Time Duration</th>
                    <th>Exam Status</th>
                    <th>Action</th>
                </tr>
                <% for(var i=0;i<examlist.length;i++){ %>
                    <tr>

                        <td>
                            <%=examlist[i].exam_id%>
                        </td>
                        <td>
                            <%=examlist[i].exam_name%>
                        </td>
                        <td>
                            <%=examlist[i].exam_time%>
                        </td>
                        <td>
                            <%=examlist[i].exam_status%>
                        </td>
                        <td>
                            <button class="btn-login" onclick="popupdata('<%=examlist[i].exam_id%>')">Login</button>
                        </td>
                    </tr>
                    <%}%>
            </table>
            <%}%>
                <div class="page">
                    <%for(var i=1;i<=numberOfpage;i++){%>
                        <% if(i===page){ %>
                            <span><a class="selectlink" href="/?page=<%=i%>">
                                    <%=i%>
                                </a></span>
                            <% continue; %>
                                <% } %>
                                    <span><a class="student" href="/?page=<%=i%>">
                                            <%=i%>
                                        </a></span>
                                    <% } %>
                </div>

                <div class="overlay" onclick="closeModel()"></div>

                <div class="loginform">
                    <span>&times;</span>
                    <form action="">
                        <input type="hidden" id="id" name="id">
                        <div>
                            <label for="">Name</label>
                            <input type="text" name="name" id="name" />
                            <div id="firstnameError" style="color: red;"></div>
                        </div>
                        <div>
                            <label for="">Email:</label>
                            <input type="text" name="email" id="email" />
                            <div id="emailError" style="color: red;"></div>
                        </div>
                        <div>
                            <label for="">Access Code:</label>
                            <input type="text" name="accesscode" id="accesscode" />
                            <div id="accesscodeError" style="color: red;"></div>
                        </div>
                        <div id="error"></div>
                        <button type="button" onclick="submitData()">Submit</button>
                    </form>
                </div>
    </body>

</html>
<script>


