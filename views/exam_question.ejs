<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Exam</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link rel="stylesheet" href="style.css" />
  </head>
  <body>
    <div class="container mt-5">
      <div class="d-flex justify-content-center row">
        <div class="overflow-hidden col-md-10 col-lg-10 border">
          <div class="bg-white p-3 border-bottom">
            <div
              class="mcq d-flex flex-row justify-content-between align-items-center"
            >
              <h4><%= exam_name %></h4>
              <span
                ><p id="que_no" class="d-inline"></p>
                of <%= data.length %></span
              >
            </div>
          </div>
          <form action="/answers" method="POST">
            <div class="d-flex">
              <% data.forEach(e => {%>
              <div class="question w-100 bg-white">
                <div id="que-<%=e.question_id%>" class="p-3">
                  <div
                    class="d-flex flex-row align-items-center question-title"
                  >
                    <h3 class="text-danger">Q.</h3>
                    <h5 class="mt-1 ml-2"><%= e.question_text %></h5>
                  </div>
                  <div class="ans ml-2">
                    <label class="radio">
                      <input
                        type="radio"
                        name="q-<%= e.question_id %>"
                        value="<%= e.option_a%>"
                      />
                      <span><%= e.option_a%></span>
                    </label>
                  </div>
                  <div class="ans ml-2">
                    <label class="radio">
                      <input
                        type="radio"
                        name="q-<%= e.question_id %>"
                        value="<%= e.option_b%>"
                      />
                      <span><%= e.option_b%></span>
                    </label>
                  </div>
                  <div class="ans ml-2">
                    <label class="radio">
                      <input
                        type="radio"
                        name="q-<%= e.question_id %>"
                        value="<%= e.option_c%>"
                      />
                      <span><%= e.option_c%></span>
                    </label>
                  </div>
                  <div class="ans ml-2">
                    <label class="radio">
                      <input
                        type="radio"
                        name="q-<%= e.question_id %>"
                        value="<%= e.option_d%>"
                      />
                      <span><%= e.option_d%></span>
                    </label>
                  </div>
                </div>
              </div>
              <% }); %>
            </div>
            <div class="buttons p-3 bg-white">
              <div class="row align-items-center" id="row">
                <input
                  type="button"
                  value="PREV"
                  class="btn btn-primary btn-info col-2"
                  id="prev"
                />

                <input
                  type="button"
                  value="NEXT"
                  class="btn btn-primary btn-success col-2"
                  id="next"
                />
              </div>
            </div>
          </form>
        </div>
      </div>
    </div>
  </body>
  <!-- ? Scripts -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js"></script>
  <script src="script.js"></script>
</html>
